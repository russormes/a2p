<!DOCTYPE html>
<html>
  <head>
    <title>A2P | Users</title>
  </head>

<%= flash[:notice] %>
<table>
  <thead>
    <tr>
     
      <th>Name</th>
      <th>Email</th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
     
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user_path(user) %></td>
        <td><%= link_to 'Destroy', user_path(user),
                    method: :delete, data: { confirm: 'Are you sure?' } %>
         
      </tr>
    <% end %>
  </tbody>
</table>
<div>


<div>
<h3>New User</h3>
<%= link_to 'Add new user here', new_user_path %>
</div>

