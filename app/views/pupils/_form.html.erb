    <%= f.label :family_name, "Family Name" %><br>
    <%= f.text_field :family_name %>
  </div>
  <div class="field">
    <%= f.label :dob, "Date of Birth" %><br>
    <%= f.date_select :dob, :start_year => @year-14, :end_year => @year %>
  </div>
  <div class="field">
    <%= f.label :gender_ID, "Gender" %><br>
    <%=  select("Gender", "gender_id", Gender.all.collect {|p| [ p.gender, p.id ] }, { :include_blank => false })%>
