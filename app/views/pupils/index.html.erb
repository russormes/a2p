<h1>Pupils</h1>

<table>
  <thead>
    <tr>
      <th>Given name</th>
      <th>Family name</th>
      <th>Date of Birth</th>
      <th>Gender</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pupils.each do |pupil| %>
      <tr>
        <td><%= pupil.given_name %></td>
        <td><%= pupil.family_name %></td>
        <td><%= pupil.dob %></td>
        <td><%= pupil.gender_ID %></td>
        <td><%= link_to 'Show', pupil %></td>
        <td><%= link_to 'Edit', edit_pupil_path(pupil) %></td>
        <td><%= link_to 'Destroy', pupil, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

